{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "preserveConstEnums": true,
    "outDir": "libr",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "rootDir": "src"
  },
  "include": [
    "src/*.ts",
    "src/*.ejs",
    "src/**/*.ts",
    "src/**/*.ejs"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
